@model IEnumerable<Training_Management_System.Models.Grade>
@{
    ViewData["Title"] = "Grades Management";
}

<div class="container-fluid">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="fas fa-chart-bar me-2"></i>Grades Management
                </h4>
                <div>
                    <a asp-action="Create" class="btn btn-light btn-sm">
                        <i class="fas fa-plus me-1"></i>Add Grade
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-8">
                    <form method="get" class="row g-2">
                        <div class="col-md-4">
                            <input type="text" name="trainee" value="@Context.Request.Query["trainee"]"
                                   class="form-control" placeholder="Search by Trainee name" />
                        </div>
                        <div class="col-md-4">
                            @Html.DropDownList("sessionId", (SelectList)ViewBag.Sessions, "All Sessions", new { @class = "form-select" })
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-primary me-2" type="submit">
                                <i class="fas fa-search me-1"></i>Search
                            </button>
                            <a class="btn btn-secondary" asp-action="Index">
                                <i class="fas fa-sync-alt me-1"></i>Reset
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th>Course</th>
                            <th>Session</th>
                            <th>Trainee</th>
                            <th>Grade</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var g in Model)
                        {
                            <tr>
                                <td>@g.session?.course?.Name</td>
                                <td>
                                    @g.session?.StartDate.ToString("dd MMM yyyy") → @g.session?.EndDate.ToString("dd MMM yyyy")
                                </td>
                                <td>
                                    @g.Trainee?.Name <small class="text-muted">(@g.Trainee?.Email)</small>
                                </td>
                                <td>
                                    <span class="badge @(g.Value >= 70 ? "bg-success" : g.Value >= 50 ? "bg-warning" : "bg-danger")">
                                        @g.Value
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        @* <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@g.id" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a> *@
                                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@g.id" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @* <form asp-action="Delete" asp-route-id="@g.id" method="post" class="delete-form">
                                            <button onclick="confirmDelete" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form> *@
                                        <form asp-action="Delete" asp-route-id="@g.id" method="post" class="delete-form">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                        </form>


                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Confirm before delete
        document.querySelectorAll(".delete-form").forEach(form => {
            form.addEventListener("submit", function (e) {
                e.preventDefault();
                Swal.fire({
                    title: "Are you sure?",
                    text: "Do you really want to delete this course?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });

        // Success popup after redirect
        @if (TempData["Deleted"] != null)
        {
                <text>
                    Swal.fire({
                        title: "Deleted!",
                        text: "@TempData["Deleted"]",
                        icon: "success",
                        confirmButtonColor: "#3085d6"
                    });
                </text>
        }
    </script>
}
