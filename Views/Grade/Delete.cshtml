@model Training_Management_System.Models.Grade
@{
    ViewData["Title"] = "Delete Grade";
}
<h2>Delete Grade</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this grade?
</div>

<dl class="row">
    <dt class="col-sm-2">Trainee</dt>
    <dd class="col-sm-10">@Model.Trainee?.Name (@Model.Trainee?.Email)</dd>

    <dt class="col-sm-2">Course / Session</dt>
    <dd class="col-sm-10">
        @Model.session?.course?.Name —
        @Model.session?.StartDate.ToString("yyyy-MM-dd") → @Model.session?.EndDate.ToString("yyyy-MM-dd")
    </dd>

    <dt class="col-sm-2">Value</dt>
    <dd class="col-sm-10">@Model.Value</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
