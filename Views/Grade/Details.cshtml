@model Training_Management_System.Models.Grade
@{
    ViewData["Title"] = "Grade Details";
}
<h2>Grade Details</h2>

<dl class="row">
    <dt class="col-sm-2">Course</dt>
    <dd class="col-sm-10">@Model.session?.course?.Name</dd>

    <dt class="col-sm-2">Session</dt>
    <dd class="col-sm-10">
        @Model.session?.StartDate.ToString("yyyy-MM-dd") → @Model.session?.EndDate.ToString("yyyy-MM-dd")
    </dd>

    <dt class="col-sm-2">Trainee</dt>
    <dd class="col-sm-10">@Model.Trainee?.Name (@Model.Trainee?.Email)</dd>

    <dt class="col-sm-2">Value</dt>
    <dd class="col-sm-10">@Model.Value</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
